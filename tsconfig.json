{
  "compilerOptions": {
    /* ======== ตั้งค่าโครงสร้างพื้นฐาน ======== */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    /* ======== เปิดใช้ Path Alias สำหรับ Next.js ======== */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ]
    },
    /* ======== Type ตรวจสอบเพิ่มเติม ======== */
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true,
    /* ======== Type รองรับ Node และ React ======== */
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
